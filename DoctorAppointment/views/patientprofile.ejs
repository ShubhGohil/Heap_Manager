<!doctype html>
<html lang="en">
  <head>
    <profile card>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    	<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>

      <link rel="stylesheet" href="css/bootstrap.min.css">
    
      <link rel="stylesheet" type="text/css" href="/css/style2.css">
      <!-- Font Awesome -->
      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet"/>
      <!-- Google Fonts -->
      <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
      <!-- MDB -->
      <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css" rel="stylesheet"/>


    
  </head>
  <body class="bg-light">
   <div class="wrapper">
   <%- include("./partials/nav.ejs", {information: information, url: url}) %>
   <div class="main_content">
      <div class="header">Welcome! Have a healthy day.</div>  
      <div class="info">

        <div class="container">
           <div class="row d-flex justify-content-center">
              <div class="col-md-10 pt-5">
                 <div class="row z-depth-5">
                   <div class="col-sm-4 bg-info round-left">
                     <div class="card-block text-center text-white">
                        <i class="fas fa-user-tie fa-7x mt-5"></i>
                        <h2 class="font-weight-bold mt-4"><%= information.name %></h2>
                        <p> Patient </p>
                        <i class="far fa-edit fa-2x mb-4"></i>
                     </div>
                   </div>
                   <div class="col-sm-8 bg-white rounded-right">
                     <h3 class="mt-3 text-center">Personal Information</h3>
                     <hr class="badge-primary mt-0 w-10">
                     <div class="row">
                        <div class="col-sm-6">
                           <p class="font-weight-bold">Email:</p>
                           <h6 class="text-muted"><%= information.emailID %></h6>
                        </div>
                          <div class="col-sm-6">
                           <p class="font-weight-bold">Mobile:</p>
                           <h6 class="text-muted"><%= information.mobile %></h6>
                        </div>
   
                        <div class="col-sm-6">
                           <p class="font-weight-bold">Address:</p>
                           <h6 class="text-muted"><%= information.address %></h6>
                          
                        </div>
                     </div>
                     <hr>
                     <h4 class="mt-3">Upcoming Appointment</h4>
                     
                     <div class="row">
                      <div class="col-sm-4">
                           <h6 class="font-weight-bold" style="margin-left: 30px;">Doctor Name</h6>
                              <ul>
                                 
                                 <% bookinginfo.forEach(function(record) { %>
                                    <% if(record.doctorid != null) { %>
                                    <li><%= record.doctorid.name %></li>
                                    <% } %>
                                 <% }); %>
                                 
                              </ul>
                        </div>
                          <div class="col-sm-4">
                              <h6 class="font-weight-bold" style="margin-left: 30px;">Date</h6>
                                 <ul>
                                    <% bookinginfo.forEach(function(record) { %>
                                        <li><%= record.date %></li>
                                     <% }); %>
                                 </ul>
                        </div>
                        <div class="col-sm-4">
                            <h6 class="font-weight-bold" style="margin-left: 30px;">Time</h6>
                               <ul>
                                <% bookinginfo.forEach(function(record) { %>
                                    <li><%= record.timeslot %></li>
                                 <% }); %>
                               </ul>
                      </div>
                     </div>
                   </div>
                 </div>    
              </div>
           </div>
        </div>
      </div>
   </div>
</div>
  </body>
</html>
