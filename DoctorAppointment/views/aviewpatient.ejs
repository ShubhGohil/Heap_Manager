<!DOCTYPE html>
<html>
<head>
 <title>Doctor Appointment System</title>
 <meta charset="utf-8">
      <link rel="stylesheet" type="text/css" href="/css/style2.css">
    	<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>

</head>

<style type="text/css">

*{
 margin: 0px;
 padding: 0px;
}

body{
 font-family: arial;
}

.card{
     width: 20%;
     display: inline-block;
     box-shadow: 2px 2px 20px black;
     border-radius: 5px; 
     margin: 2%;
}

.title{
  text-align: center;  
}

.des{
  padding: 3px;
  text-align: center;
  border-bottom-right-radius: 5px;
  border-bottom-left-radius: 5px;
}

button{
  display: block;
  margin-top: 30px;
  margin-bottom: 10px;
  margin-left: 40%;
  background-color: white;
  border: 1px solid black;
  border-radius: 5px;
  padding:10px;
}

button:hover{
  background-color: red;
  color: white;
  transition: .5s;
  cursor: pointer;
}

input {
  border: 0;
}

.title input[type=text],
.des input[type=text] {
  margin-top: 30px;
  font-size: 20px;
  text-align: center;
}

</style>
<body>

<div class="main">

   <div class="wrapper">
   <%- include("./partials/nav_admin.ejs", {information: information, url: url}) %>
   <div class="main_content">
      <div class="header">Welcome! Have a healthy day.</div>  
      <div class="info">

<!--cards -->

<% patient.forEach(function (record) { %>
<div class="card">
<form action="<%= url %>/patients" method="POST">
<div class="title">
 <input type="text" name = "patient" value="<%= record.name %>" readonly>
</div>
<div class="des">
<input type="text" name="email" value="<%= record.emailID %>" readonly>
<input type="text" name="mobile" value="<%= record.mobile %>" readonly>
<button type="submit">Remove</button>
</div>
</form>
</div>
<% }); %>

</div>
</div>
</div>

</body>
</html>
